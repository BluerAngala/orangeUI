/* pages/comp/swiper/swiper.wxss */
.title{
  color: #333333;
  height: 30px;
  font-size: 34rpx;
  font-weight: bold;
}

.slide-image{
  width: 100%;
  height: 100%;
  display: block;
}

.swiper-card{
  position: relative;
  margin-top: 50rpx;
  height: 340rpx;
}
.swiper-card .carousel {
  position: absolute;
  top: 20%;
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  overflow: hidden;
}
.swiper-card .carousel-item {
  width: 70% !important;
  padding: 0;
  left: 15%;
}
.swiper-card .carousel-item image{
  width: 100%;
  height: 100%;
  display: block;
  margin: 0 auto;
}
.swiper-card .noActive {
  transform: scale(0.85);
}